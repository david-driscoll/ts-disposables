{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "es2015.collection"
        ],
        "module": "commonjs",
        "diagnostics": true,
        "noEmitOnError": false,
        "preserveConstEnums": true,
        "outDir": "dist",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        //"noUnusedLocals": true,
        //"noUnusedParameters": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "rules",
        "dist"
    ]
}
